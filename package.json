{
  "name": "@folly-systems/custom-react-player",
  "version": "1.1.2",
  "description": "A simple and lightweight video player component that helps you customize controls for your videos.",
  "main": "./dist/lib/index.js",
  "module": "./dist/es/index.js",
  "author": "Nehal Shetty",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "build-watch": "rollup -c -w",
    "clean-build-watch": "rm -rf example/src/component/VideoPlayer && rollup -c -w",
    "install-example-packages": "cd example && yarn",
    "example-app": "cd example && yarn start"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint src/*.{js,jsx,ts,tsx} --fix-dry-run"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/folly-systems/custom-react-player.git"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.1",
    "@types/jest": "^24.0.24",
    "@types/react": "^16.9.12",
    "@types/react-dom": "^16.9.8",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "autoprefixer": "^10.2.6",
    "babel-loader": "8.1.0",
    "babel-preset-react-app": "^10.0.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb-typescript": "^7.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.8.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "husky": "^6.0.0",
    "install-peers-cli": "^2.2.0",
    "lint-staged": "^11.0.0",
    "postcss": "^8.3.5",
    "prepend-file": "^2.0.0",
    "prettier": "^2.1.2",
    "rollup": "^2.36.1",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "^3.1.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "ts-node": "^9.0.0",
    "tslib": "^2.0.3",
    "typescript": "^4.1.3",
    "typescript-plugin-css-modules": "^3.4.0"
  },
  "peerDependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "keywords": [
    "react-player",
    "custom-player",
    "folly-systems",
    "custom-react-player",
    "video",
    "video-player",
    "custom-video-controls"
  ]
}
